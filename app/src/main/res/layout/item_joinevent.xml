<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="2dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/je_dialog_ename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이벤트 : 이벤트 제목"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/je_dialog_eprofit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이벤트 혜택 : "
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/je_dialog_edeadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이벤트 기간 : "
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/je_dialog_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이벤트 인원 : "
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/je_dialog_ecordination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이벤트 조건 : "
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/je_dialog_isResult"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_warning_ok" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
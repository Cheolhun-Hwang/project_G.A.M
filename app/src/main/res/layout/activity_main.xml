<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.hchooney.qewqs.gam.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/mainThema">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_gam"
                android:id="@+id/imageView"
                android:layout_marginStart="14dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:textColor="#fff"
                android:text="G.A.M"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginStart="9dp" />

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_settings_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:id="@+id/MainSettingBTN" />

            <ImageView
                android:id="@+id/MainMapBTN"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignTop="@+id/MainGiftBTN"
                android:layout_marginEnd="2dp"
                android:layout_marginLeft="5dp"
                android:layout_toStartOf="@+id/MainGiftBTN"
                android:src="@drawable/ic_map_24dp" />

            <ImageView
                android:paddingBottom="2dp"
                android:id="@+id/MainGiftBTN"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toStartOf="@+id/MainSettingBTN"
                android:src="@drawable/gift2" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/subThema">

    </LinearLayout>

</LinearLayout>
